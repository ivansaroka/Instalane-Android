<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instalane" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/textBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleStatusBarMain" parent="Theme.Instalane">
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_gray</item>
    </style>

    <style name="StyleStatusBarWhite" parent="Theme.Instalane">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="StyleStatusBarGreen" parent="Theme.Instalane">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
    </style>

    <style name="StyleStatusBarTransparent" parent="Theme.Instalane">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="StyleStatusBarRed" parent="Theme.Instalane">
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextStyleSemiBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TitleEditTextStyle" parent="TextStyleSemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColorHint">@color/textBlack</item>
    </style>

    <style name="EditTextStyle" parent="TextStyleSemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/textGray</item>
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@color/transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="StyleDialogBackground">
        <item name="android:background">@drawable/bg_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_app</item>
    </style>

    <style name="StyleButtonApp" parent="TextStyleBold">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:enabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleButtonAppCancel" parent="TextStyleBold">
        <item name="android:background">@drawable/bg_button_cancel</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleHomeStyle" parent="TextStyleBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_semi_big</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoDraggingBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>