<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mContAll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_membership"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_app"
    android:layout_marginBottom="@dimen/margin_app"
    android:layout_marginHorizontal="@dimen/margin_app"
    android:background="@drawable/bg_box_membership_verified">

    <ImageView
        android:id="@+id/mPhoto"
        android:layout_width="@dimen/width_photo_membership"
        android:layout_height="@dimen/height_photo_membership"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_photo_placeholder"/>

    <TextView
        android:id="@+id/mTitle"
        android:text="Costco Gold Star"
        style="@style/ProfileOptionTitleStyle"
        app:layout_constraintStart_toEndOf="@+id/mPhoto"
        android:layout_marginStart="@dimen/margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/mViewMiddle" />

    <View
        android:id="@+id/mViewMiddle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/mNumber"
        android:text="347890618372"
        style="@style/ProfileOptionDescriptionStyle"
        app:layout_constraintStart_toEndOf="@+id/mPhoto"
        android:layout_marginStart="@dimen/margin_normal"
        app:layout_constraintTop_toBottomOf="@+id/mViewMiddle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>